function tmux_create_or_attach_session() {
  #
  # Creates or attaches to a tmux session with the name $1. If the session
  # existed returns normally, otherwise returns 1.
  #

  sess_name="$1"
  win_name="$2"

  if tmux has-session -t "$sess_name" 2>/dev/null; then
    tmux attach -t "$sess_name"
    return 0
  fi

  tmux new-session -d -s "$sess_name" -n "$win_name" -x $(tput cols) -y $(tput lines)
  return 1
}
