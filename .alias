# Aliases

alias l="ls -lha"
alias lr="ls -lahR"
alias t="tree -a -L 2"

alias vim='nvim'
alias pip='pip3'
alias python='python3'

alias f='ranger'
alias zathura='zathura --fork'

alias dmenu='dmenu -i -fn "System San Francisco Display-9:bold" -nb "#171717" -nf "#fff" -sb "#fff" -sf "#171717"'

alias cdbak='cd ~/Documents/bak;f'
alias cddotfiles='cd ~/Documents/dotfiles;f'

alias vimrc='vim ~/.config/nvim/init.vim'
alias vundlerc='vim ~/.config/nvim/vundle.vim'
alias i3rc='vim ~/.config/i3/config'

alias todo='vim ~/Documents/my_files/todo.txt'
